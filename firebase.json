{
  "hosting": {
    "public": "templates",  // Serve HTML files from 'templates'
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "function": "app"  // This rewrites all URLs to be handled by your Flask app
      }
    ]
  }
}
